<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="2dp"
    android:layout_marginBottom="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageButton style="@style/AppTheme"
            android:id="@+id/weather_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="New Button"
            android:src="@drawable/weather_stormy"
            android:background="@drawable/circle_mask"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:scaleType="centerInside" />

        <LinearLayout
            android:id="@+id/favorite_top"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_toRightOf="@+id/weather_icon">
                <TextView
                    android:id="@+id/favorite_station"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_toRightOf="@+id/weather_icon"
                    android:layout_marginLeft="8dp"
                    android:text="Genève-Cointrin"
                    android:textSize="14dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/favorite_updated"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="18:00 UTC"
                    android:layout_alignBottom="@+id/title"
                    android:gravity="center_vertical"
                    android:textColor="@color/text_secondary"
                    android:layout_marginLeft="8dp"
                    android:textSize="14dp"/>
            </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weather_icon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/favorite_condition1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature 9.4 ° wind West 3.7/11.1 km/h"
                android:gravity="center_vertical"
                android:textColor="@color/text_primary"
                android:layout_marginLeft="5dp"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/favorite_condition2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precipitation 0/1h"
                android:gravity="center_vertical"
                android:textColor="@color/text_primary"
                android:layout_marginLeft="5dp"
                android:textSize="14dp"/>
            </LinearLayout>


    </RelativeLayout>


</android.support.v7.widget.CardView>


