<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- Pressed -->
    <item android:drawable="@color/divider" android:state_focused="false" android:state_selected="true" />

    <!-- Focused -->
    <item android:drawable="@color/divider" android:state_enabled="true" android:state_focused="true" />

    <item android:drawable="@color/divider" android:state_checked="true" android:state_selected="true" />

    <!-- Selected -->
    <item android:drawable="@color/divider" android:state_focused="true" android:state_selected="false" />

    <!-- default -->
    <item
        android:drawable="@android:color/white" />
</selector>